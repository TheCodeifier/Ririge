{% extends "base.html.twig" %}
{% block body %}
    <div class="container-fluid">
        <br>
        <div class="container-fluid text-center">
            <a href="/adminstration" class="btn btn{{link1 }}">Leden</a>
            <a href="/adminstration/instructor" class="btn btn{{link2 }}">Instructor</a>
            <a href="/adminstration/training" class="btn btn{{link3 }}">Training</a>
        </div>
        <br>
        <h1 class="text-center">{{ title }}:</h1>
        <br>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive-sm">
                <table class="table">
                    <tr>
                        <th>Login naam</th>
                        <th>Voornaam</th>
                        <th>Achternaam</th>
                        <th>Email</th>
                        <th>Wachtwoord</th>
                        <th>Date of birth</th>
                        <th>Straat</th>
                        <th>Plaats</th>
                        <th>
                            <i class="bi bi-pencil-square"></i>
                            Update
                        </th>
                        <th>
                            <i class="bi bi-trash"></i>
                            Delete
                        </th>
                    </tr>
                    {% for person in persons %}
                        <tr>
                            <td>{{ person.username }}</td>
                            <td>{{ person.firstname }}</td>
                            <td>{{ person.lastname }}</td>
                            <td>{{ person.email }}</td>
                            <td>{{ person.password }}</td>
                            <td>{{ person.dateofbirth |date('m-d-Y') }}</td>
                            <td>{{ person.street }}</td>
                            <td>{{ person.place }}</td>
                            <td><a class="btn btn-warning" href="/adminstration/person/update/{{ person.id }}">Albert</a></td>
                            <td><a class="btn btn-danger" href="/adminstration/delete/person/{{ person.id }}">Hein</a></td>
                        </tr>
                    {% endfor %}
                </table>
                </div>
            </div>
        </div>
    </div>



{% endblock %}